<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.min.css" />
</head>
<body>
    <header class="navbar navbar-dark bg-dark sticky-md-top navbar-expand-lg">
        <a class="navbar-brand me-sm-auto px-3" asp-controller="Admin" asp-action="Index">Event Calendar (Admin)</a>
        <button class="navbar-toggler d-md-none collasped mx-3" type="button" data-bs-toggle="collapse" data-bs-target=".collapse" aria-controls="collapse"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-nav d-none d-md-block">
            <div class="nav-item text-nowrap">
                <a class="nav-link px-3" asp-controller="Home" asp-action="Index">Production</a>
            </div>
        </div>
    </header>
    <div class="container-fluid h-100">
        <div class="row h-100">
            <nav class="col-md-3 col-lg-2 d-md-block sidebar navbar-light collapse">
                <ul class="navbar-nav position-sticky pt-3">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Admin" asp-action="Roles">Roles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Admin" asp-action="Categories">Categories</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Admin" asp-action="UserRoles">Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Admin" asp-action="Comments">Comments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Admin" asp-action="Logs">Logs</a>
                    </li>
                    <li class="nav-item d-sm-block d-md-none">
                        <a class="nav-link" aria-current="page" asp-controller="Home" asp-action="Index">Production</a>
                    </li>
                </ul>
            </nav>
            <main class="col-md-9 col-lg-10 p-0">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>