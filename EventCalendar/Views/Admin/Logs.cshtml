@model AdminViewModel
@{
    Layout = "_AdminLayout";
}

<section class="container pt-3 py-1">
    <h1>Logs</h1>
    <p>Below is a list of logs from the application!</p>
</section>
<hr />
<section class="mt-4 container-fluid">
    @if (Model.Logs.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <td class="font-weight-bold">Log ID</td>
                        <td class="font-weight-bold">Description</td>
                        <td class="font-weight-bold">Log Type</td>
                        <td class="font-weight-bold">Date Created</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contact in Model.Logs)
                    {
                        <tr>
                            <td>@contact.LogID</td>
                            <td>@contact.LogDescription</td>
                            <td>@contact.LogType</td>
                            <td>@contact.DateCreated.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="h3 text-center">
            There are no comments at this time
        </div>
    }
</section>