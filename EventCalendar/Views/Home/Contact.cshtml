@model HomeViewModel
<section class="mb-4 jumbotron-blue">
    <div class="py-5 container">
        <h1>Contact</h1>
        <span class="fs-5">You've got questions? We've got answers!</span>
    </div>
</section>

<section class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <span class="fs-3 d-block w-100 text-center">Please fill out the form below for more information about our services</span>
            <form asp-controller="Home" asp-action="Contact" class="py-3 px-5 shadow-lg rounded-3" method="post">
                <div class="mb-3 row">
                    <div class="col-md-12">
                        <label asp-for="Contact.FirstName" class="col-form-label">First Name<span class="text-danger">*</span></label>
                        <input asp-for="Contact.FirstName" type="text" class="form-control" placeholder="Enter First Name" />
                        <span asp-validation-for="Contact.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-md-12">
                        <label asp-for="Contact.LastName" class="col-form-label">Last Name<span class="text-danger">*</span></label>
                        <input asp-for="Contact.LastName" type="text" class="form-control" placeholder="Enter Last Name" />
                        <span asp-validation-for="Contact.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-md-12">
                        <label asp-for="Contact.Email" class="col-form-label">Email<span class="text-danger">*</span></label>
                        <input asp-for="Contact.Email" type="email" class="form-control" placeholder="Enter Email" />
                        <span asp-validation-for="Contact.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-md-12">
                        <label asp-for="Contact.Message" class="col-form-label">Message<span class="text-danger">*</span></label>
                        <textarea asp-for="Contact.Message" rows="6" class="form-control" placeholder="Enter Message"></textarea>
                        <span asp-validation-for="Contact.Message" class="text-danger"></span>
                    </div>
                </div>
                <div class="mt-3 text-center">
                    <button class="btn btn-primary">Submit</button>
                </div>
            </form>
            <p class="text-secondary float-end mt-3"><span class="text-danger">*</span>All fields are required</p>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
