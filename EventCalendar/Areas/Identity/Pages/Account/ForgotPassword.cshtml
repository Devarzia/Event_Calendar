@page
@model ForgotPasswordModel

<section class="mb-4 jumbotron-green">
    <div class="py-5 container">
        <h1>Forgot Password</h1>
    </div>
</section>

<div class="container mb-2">
    <span class="lead d-block w-100 text-center">To reset your password, enter the email that is associated with your account</span>
    <form class="col-md-6 offset-md-3" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <label asp-for="Input.Email" class="text-md-center col-form-label col-md-3"></label>
            <div class="col-md-9">
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
