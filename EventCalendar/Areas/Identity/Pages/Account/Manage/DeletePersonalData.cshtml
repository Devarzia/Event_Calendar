@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4 class="mb-3">@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <span class="fw-bold">Deleting this data will permanently remove your account, and this cannot be recovered.</span>
</div>

<form id="delete-user" method="post" class="form-group">
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (Model.RequirePassword)
    {
        <div class="mb-3">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
    }
    <button class="btn btn-danger mt-3" type="submit">Delete data and close my account</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}