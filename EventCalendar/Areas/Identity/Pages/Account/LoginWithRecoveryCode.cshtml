@page
@model LoginWithRecoveryCodeModel

<section class="mb-4 jumbotron-green">
    <div class="py-5 container">
        <h1>Recovery Code Verification</h1>
    </div>
</section>

<section class="mb-3">
    <div class="card bg-info">
        <div class="card-body p-2">
            You have requested to log in with a recovery code. This login will not be remembered until you provide
            an authenticator app code at log in or disable 2FA and log in again
        </div>
    </div>
    <form class="p-4 col-md-6 offset-md-3" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.RecoveryCode"></label>
            <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" />
            <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Log in</button>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
